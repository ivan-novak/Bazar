@model RozetkaWebApp.Models.Catalog


    @if (ViewBag.Portal == null) 
    {
        ViewData["Title"] = "Каталоги портала";
        <h1>@ViewData["Title"]</h1>
    }
    else 
    {
        ViewData["Title"] = "Портал - "+ViewBag.Portal.Label;
        <p> 
            <a asp-controller = "Portals" asp-action="Index"> Администрирование </a> \
           <a > @ViewBag.Portal.Label </a> 
        </p>

        <h1>  @ViewData["Title"] </h1>
  

        <ul class="nav nav-tabs">
            <li class="nav-item">  <a class="nav-link active" href="/Products/Index/@ViewBag.Portal.PortalId">Каталог</a> </li>
            <li class="nav-item">  <a class="nav-link" href="/CatalogImages/Index/@ViewBag.Portal.PortalId">Изображения</a> </li>
            <li class="nav-item">  <a class="nav-link" href="/Catalogs/Details/@ViewBag.Portal.PortalId">Детали</a> </li>
        </ul>  
 }

 <p>
     <h4> Новый каталог </h4>
 </p>


<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-success" />
                <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">Отменить</button>
            </div> 


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PortalId" class="control-label"></label>
                <select asp-for="PortalId" class ="form-control" asp-items="ViewBag.PortalId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Label" class="control-label"></label>
                <input asp-for="Label" class="form-control" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
               <div>
                    <textarea asp-for="Description" rows="6" style="width:100%"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div></div>
            <div class="form-group">
                <label asp-for="Attributes" class="control-label"></label>
               <div>
                    <textarea asp-for="Attributes" rows="6" style="width:100%"></textarea>
                    <span asp-validation-for="Attributes" class="text-danger"></span>
                </div> </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
