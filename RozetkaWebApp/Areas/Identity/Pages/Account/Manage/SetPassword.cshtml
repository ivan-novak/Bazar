@page
@using RozetkaWebApp.App_GlobalResources;
@model SetPasswordModel
@{
    ViewBag.Title= Resources.Set_your_password;
    ViewBag.ActivePage = ManageNavPages.ChangePassword;
}

<h4>@Resources.Set_your_password</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    @Resources.У_вас_нет_локального_имени_пол
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewPassword">@Resources.Новы_пароль</label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">@Resources.Подтвердить_пароль</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@Resources.Set_your_password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}