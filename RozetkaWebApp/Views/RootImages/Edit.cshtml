@model RozetkaWebApp.Models.RootImage

@{
    ViewData["Title"] = "Администрирование порталов";
}
        <p> 
           <a> Администрирование </a> \
       </p>

<h1>@ViewData["Title"]</h1>


        <ul class="nav nav-tabs">
            <li class="nav-item">  <a class="nav-link " href="/Portals">Порталы</a> </li>
            <li class="nav-item">  <a class="nav-link active" href="/RootImages/Index">Изображения</a> </li>
        </ul> 
        
 <p>
     <h4> Изменить изображение </h4>
 </p>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">

              <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-success" />
                <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">Отменить</button> 
                   <hr />
             </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RootImageId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Label" class="control-label"></label>
                <input asp-for="Label" class="form-control" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageId" class="control-label"></label>
                <select asp-for="ImageId" class="form-control" asp-items="ViewBag.ImageId"></select>
                <span asp-validation-for="ImageId" class="text-danger"></span>
            </div>
          

                <div class="form-group" >
                 <div class="editor-label">Файл изображения</div>
                 <div class="editor-field">
                    <input type="file" name="uploadImage" accept="image/*" />
                </div>
            </div>    

        </form>
    </div>
      <div class = "col-sm-4"> 
          <img src="/Images/Index/@Model.ImageId" alt="@Model.Label" width="100%" />
     </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
