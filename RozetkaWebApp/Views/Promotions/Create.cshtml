@using RozetkaWebApp.App_GlobalResources;
@model RozetkaWebApp.Models.Promotion

 @{
    ViewBag.PromotionsTab = (("active"));
    Html.RenderPartial((("_RootNavigator")));
}
  
  <p>
     <h4> @Resources.Новая_промоакция </h4>
 </p>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="submit" value="@Resources.Create" class="btn btn-success" />
                <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">@Resources.Отменить</button>
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">@Resources.Заголовок0</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Label" class="control-label">@Resources.Этикетка</label>
                <input asp-for="Label" class="form-control" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">@Resources.Описание</label>
                <div>
                    <textarea asp-for="Description" rows="6" style="width:100%"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div> 
            </div>
            <div class="form-group">
                <label asp-for="Attributes" class="control-label">@Resources.Атрибуты</label>
                <div>
                    <textarea asp-for="Attributes" rows="6" style="width:100%"></textarea>
                    <span asp-validation-for="Attributes" class="text-danger"></span>
                </div>
            </div>
            <div class="row col-md-4">
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label">@Resources.Дата_начала</label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label">@Resources.Дата_завершения</label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" style="display: none">
                <label asp-for="ImageId" class="control-label"></label>
                <select asp-for="ImageId" class ="form-control" asp-items="ViewBag.ImageId"></select>
            </div>
            <div class="form-group" >
               <div class="editor-label">@Resources.Файл_изображения</div>
               <div class="editor-field">
                    <input type="file" name="uploadImage" accept="image/*" />
               </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync((("_ValidationScriptsPartial")));}
}
