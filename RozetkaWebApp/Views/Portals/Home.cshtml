                        <a asp-controller="AspNetUsers" asp-action="Preferences" asp-route-id="@ViewBag.User.Id">Мої уподобання</a>
                    </div>
                    <div>
                        <a asp-controller="Contacts" asp-action="Index" asp-route-id="@ViewBag.User.Id">Мої контакти</a>
                    </div>
                    <div>
                        <a asp-controller="Addresses" asp-action="Index" asp-route-id="@ViewBag.User.Id">Мої адреси</a>
                    </div>
                    <div>
                        <a asp-controller="Wallets" asp-action="Index" asp-route-id="@ViewBag.User.Id">Мої гаманці</a>
                    </div>
                </div>
            </div>
            <div class="card mr-3 mb-3">
                <div class="card-body ">

                    <h5 class="card-title">Встановлюйте наші додатки</h5>
                    <table class="table table-borderless m-0 p-0">
                        <td class="m-0 p-1"><img class=" w-100" src="/images/root/AppStore" alt="First slide"></td>
                        <td class="m-0 p-1"> <img class=" w-100" src="/images/root/GooglePlay" alt="First slide"></td>
                    </table>


                </div>
            </div>
            <div class="card mr-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">Ми в соціальних мережах</h5>
                    <table class="table table-borderless m-0 p-0">
                        <td class="m-0 p-1"><img class=" w-100" src="/images/root/Instagram" alt="First slide"></td>
                        <td class="m-0 p-1"> <img class=" w-100" src="/images/root/Facebook" alt="First slide"></td>
                        <td class="m-0 p-1"> <img class=" w-100" src="/images/root/Telegram" alt="First slide"></td>
                        <td class="m-0 p-1"> <img class=" w-100" src="/images/root/Twitter" alt="First slide"></td>
                        <td class="m-0 p-1"> <img class=" w-100" src="/images/root/Tumblr" alt="First slide"></td>
                    </table>

                </div>
            </div>
                        <div class="card mr-3 mb-3">
                <div class="card-body ">

                    <h5 class="card-title">Безготівкові платежі</h5>
                    <table class="table table-borderless m-0 p-0">
                        <td class="m-0 p-1"><img class=" w-90" src="/images/root/Mastercard" alt="First slide"></td>
                        <td class="m-0 p-1"> <img class=" w-90" src="/images/root/Visacard" alt="First slide"></td>
                    </table>


                </div>
            </div>


        }


    </div>
    <div class="col-sm-9 m-0 p-0">
        @{
            <div id="carouselExampleSlidesOnly" class="carousel slide  mb-3" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/images/root/Banner0" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/root/Banner1" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/root/Banner2" alt="Third slide">
                    </div>
                </div>
            </div>
            ViewBag.AdvertisingTitle = "Останні переглянуті товари";
            Html.RenderPartial((("_BlockAdvertising4")));
