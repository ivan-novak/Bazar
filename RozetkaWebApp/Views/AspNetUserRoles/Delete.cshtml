@using RozetkaWebApp.App_GlobalResources;
@model RozetkaWebApp.Models.AspNetUserRole

@{
    ViewBag.Title= Resources.Удалить_члена_группы;
}

@{
    ViewBag.DetailsTab = (("active"));
    Html.RenderPartial((("_RootNavigator")));



    var Id = Model.UserId + Model.RoleId;
}

<p> 
    <h4>@Resources.Вы_хотите_удалить_этого_пользо</h4>
</p>
<form asp-action="Delete">
   
        <input type="hidden" asp-for="@Id" />
        <input type="submit" value="@Resources._Remove" class="btn btn-danger" /> 
        <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">@Resources.Отменить</button>
         <hr />
    </form>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Resources.Групп_безопасности
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role.Name)
        </dd class>
        <dt class = "col-sm-2">
           @Resources.AspNetUser
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd class>
    </dl>
    

</div>
