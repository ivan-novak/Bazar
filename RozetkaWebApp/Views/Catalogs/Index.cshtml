@model IEnumerable<RozetkaWebApp.Models.Catalog>

@{

    ViewBag.CatalogsTab = "active";
    Html.RenderPartial("_PortalNavigator");
}
        
     <p><h4>Список каталогов</h4></p>
            
     <p><a  class="btn btn-success" asp-action="Create" asp-route-id="@ViewBag.Portal.PortalId"> Добавить новый</a> </p>


<table class="table">
    <thead>
        <tr>
            <th> ID </th>
            <th> Наименование каталога     </th>
            <th> Ресурсы </th>
            <th class="text-right"> Действия  </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.CatalogId)  </td>
            <td>  <a asp-controller="Products" asp-action="Index" asp-route-id="@item.CatalogId">@Html.DisplayFor(modelItem => item.Label)</a>  </td>
            <td> 
                <a asp-controller = "CatalogImages" asp-action="Index" asp-route-id="@item.CatalogId">Изображения</a> |
                <a asp-controller = "Properties" asp-action="Index" asp-route-id="@item.CatalogId">Фильтры</a> 
            </td>
            <td class="text-right">
                <a asp-controller = "Products" asp-action="Index" asp-route-id="@item.CatalogId"> <i class="fas fa-solid fa-folder"></i> </a> |
                <a asp-action="Edit" asp-route-id="@item.CatalogId">  <i class="fas fa-solid fa-pen-square"></i> </a> |
                <a asp-action="Delete" asp-route-id="@item.CatalogId"> <i class="fas fa-solid fa-trash"></i> </a>
            </td>
        </tr>}
    </tbody>
</table>
