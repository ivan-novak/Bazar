@model IEnumerable<RozetkaWebApp.Models.Contact>

@{
    ViewBag.ContactsTab = "active";
    Html.RenderPartial("_ProfileNavigator");
}


 <p><h4>Список контактов</h4></p>

 <p><a  class="btn btn-success" asp-action="Create" asp-route-id=@ViewBag.User.Id> Добавить новый </a>   </p>

<table class="table">
    <thead>
        <tr> 
            <th> ID </th>     
            <th> Полное имя </th>        
            <th> Адрес электронной почты </th>    
            <th> Факс </th>          
            <th> Мобильный телефон </th>          
            <th class="text-right"> Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.ContactId)
            </td>
            <td>
                 <a asp-action="Details" asp-route-id="@item.ContactId">
                     @Html.DisplayFor(modelItem => item.FirstName)
                     @Html.DisplayFor(modelItem => item.MidName)
                     @Html.DisplayFor(modelItem => item.LastName)
                </a> 
               
            </td>                   
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>         
            <td>
                @Html.DisplayFor(modelItem => item.Fax)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.Phone1)
            </td>          
            <td class="text-right">
                <a asp-action="Details" asp-route-id="@item.ContactId"><i class="fas fa-solid fa-folder"></i></a> |
                <a asp-action="Edit" asp-route-id="@item.ContactId"><i class="fas fa-solid fa-pen-square"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.ContactId"><i class="fas fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
