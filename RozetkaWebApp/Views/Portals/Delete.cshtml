@model RozetkaWebApp.Models.Portal

@{
    ViewData["Title"] ="Портал - "+@Model.Label;
}
@{
    ViewBag.Portal = Model;
    ViewBag.DetailsTab = "active";
    Html.RenderPartial("_PortalNavigator");
}

    <p> 
        <h4>Вы хотиту удалить это портал?</h4>
    </p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PortalId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> 
        <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">Отменить</button>
         <hr />
    </form>

<div>  
    <dl class="row">
        <dt class = "col-sm-2">
            Заголовок
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Этикетка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Атрибуты
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Attributes)
        </dd>
    </dl>

</div>
