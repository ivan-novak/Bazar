@model RozetkaWebApp.Models.CatalogImage
@if (ViewBag.Catalog == null) 
    {
        ViewData["Title"] = "Товары каталога";
        <h1>@ViewData["Title"]</h1>
    }
else 
{

     ViewData["Title"] = "Каталог - "+ViewBag.Catalog.Label;
     <p> 
            <a asp-controller = "Portals" asp-action="Index"> Администрирование </a> \
            <a asp-controller = "Catalogs" asp-action="Index" asp-route-id="@ViewBag.Catalog.PortalId"> @ViewBag.Catalog.Portal.Label </a> 
            <a> @ViewBag.Catalog.Label </a> 
     </p>

        <h1>  @ViewData["Title"] </h1>
  

        <ul class="nav nav-tabs">
            <li class="nav-item">  <a class="nav-link" href="/Products/Index/@ViewBag.Catalog.CatalogId">Товары</a> </li>
            <li class="nav-item">  <a class="nav-link active" href="/CatalogImages/Index/@ViewBag.Catalog.CatalogId">Изображения</a> </li>
            <li class="nav-item">  <a class="nav-link" href="/Properties/Index/@ViewBag.Catalog.CatalogId">Фильтры</a> </li>
            <li class="nav-item">  <a class="nav-link" href="/Catalogs/Details/@ViewBag.Catalog.CatalogId">Детали</a> </li>
        </ul>    }
        
   <p></p>
  
<p>
   <h4>Удалить это изображение?</h4>
</p>
<div class="row">
 <div class="col-md-8">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> 
        <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">Отменить</button>
         <hr />
    </form>
    <p></p>
        <dl class="row">       
             <dt class = "col-sm-2"> Заголовок </dt> <dd class = "col-sm-10"> @Html.DisplayFor(model => model.Title) </dd>
             <dt class = "col-sm-2"> Этикетка </dt>  <dd class = "col-sm-10"> @Html.DisplayFor(model => model.Label) </dd>
        </dl> 
</div>
<div class="col-md-4"> 
         <img src="/Images/Index/@Model.ImageId" alt=@Model.Label width="100%" />        
</div>
</div>
