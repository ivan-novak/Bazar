@using RozetkaWebApp.App_GlobalResources;
@model RozetkaWebApp.Models.Portal

@{
    ViewBag.Title=(("Портал - "))+@Model.Label;
}
@{
    ViewBag.Portal = Model;
    ViewBag.DetailsTab = (("active"));
    Html.RenderPartial((("_PortalNavigator")));
}

    <p> 
        <h4>@Resources.Вы_хотиту_удалить_это_портал</h4>
    </p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PortalId" />
        <input type="submit" value="@Resources._Remove" class="btn btn-danger" /> 
        <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">@Resources.Отменить</button>
         <hr />
    </form>

<div>  
    <dl class="row">
        <dt class = "col-sm-2">
            @Resources.Заголовок0
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Этикетка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Атрибуты
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Attributes)
        </dd>
    </dl>

</div>
