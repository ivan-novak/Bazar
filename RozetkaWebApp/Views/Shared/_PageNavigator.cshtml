@{
    int pagesCount = (ViewBag.TotalCount-1)/ViewBag.PageSize+1;
    int size = 10;
    int first = ViewBag.Page/size;
    int last = first+size;
    if (last > pagesCount) last = pagesCount;
    string path = Context.Request.Path+(("?Filter="))+ViewBag.Filter+(("&pageSize="))+ViewBag.PageSize+(("&page="));   
}
<div class="text-center">   

    @if(first != 0)
    {
        <a class="btn btn-outline-dark" href=@(path+(first-1))>
             <i class="fas fa-arrow-left"></i>
        </a>
    }
    @for (int i=first; i<last; i++)
        @if(i == ViewBag.Page)
        {
            <a class="btn btn-outline-warning" href=@(path+i)>
               @(i+1)
            </a>
        }
        else
        {
            <a class="btn btn-outline-dark" href=@(path+i)>
                @(i+1)
            </a>    
        }
    @if(last < pagesCount)
    {
        <a class="btn btn-outline-dark" href=@(path+last)>
                <i class="fas fa-arrow-right"></i>
        </a>
    }
</div>

       
