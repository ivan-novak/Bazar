@model RozetkaWebApp.Models.Catalog

@{
         ViewBag.Catalog = Model;
}

@{
    ViewBag.DelailTab = "active";
    Html.RenderPartial("_CatologNavigator");
}


 <p>
   <h4> Информация о каталоге</h4>
 <p>

<div>
     <div class="form-group">
          <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.CatalogId"> Изменить </a>
          <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.CatalogId"> Удалить </a>     
           <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">Отменить</button>   
           <hr />
      </div>

    <dl class="row">
        <dt class = "col-sm-2">  Заголовок  </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.Title)  </dd>
        <dt class = "col-sm-2">  Этикетка </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.Label)   </dd>
        <dt class = "col-sm-2">  Описание  </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.Description)  </dd>
        <dt class = "col-sm-2">  Атрибуты  </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.Attributes) </dd>
        <dt class = "col-sm-2">  Портал  </dt>
        <dd class = "col-sm-10"> @Html.DisplayFor(model => model.Portal.Label) </dd>
    </dl>
</div>

