@model RozetkaWebApp.Models.Order

@{
    ViewBag.OrdersTab = "active";
    Html.RenderPartial("_ProfileNavigator");
}

<p>
   <h4>Удалить этот заказ?</h4>
</p>
<form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> 
        <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">Отменить</button>
         <hr />
    </form>
<div>
    <dl class="row">
        <dt class = "col-sm-2">  Номер заказа </dt>             <dd class = "col-sm-10">  @Html.DisplayFor(model => model.OrderId) </dd>
        <dt class = "col-sm-2">  Дата заказ </dt>               <dd class = "col-sm-10">  @Html.DisplayFor(model => model.OrderDate)  </dd>
        <dt class = "col-sm-2">  Адрес доставки   </dt>         <dd class = "col-sm-10">  @Html.DisplayFor(model => model.DeliveryAddress) </dd>
        <dt class = "col-sm-2">  Контактное лицо  </dt>         <dd class = "col-sm-10">  @Html.DisplayFor(model => model.DeliveryContact) </dd>
        <dt class = "col-sm-2">  Электронный адрес</dt>   <dd class = "col-sm-10">  @Html.DisplayFor(model => model.DeliveryEmail)  </dd>
        <dt class = "col-sm-2">  Телефон заказчик  </dt>        <dd class = "col-sm-10">  @Html.DisplayFor(model => model.DeliveryPhone) </dd>
        <dt class = "col-sm-2">  Сумма </dt>                    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Total) </dd>
        <dt class = "col-sm-2">  Банковская карта </dt>         <dd class = "col-sm-10">  @Html.DisplayFor(model => model.CardNumber)  </dd>

    </dl>
</div>



<p>
    <h6>Список товаров </h6>
</p>

<table class="table">
    <thead>
        <tr>
             <th> Название </th>
            <th> Описание </th>
           <th> Цена </th>
            <th> Количество  </th>
             <th>  Сумма </th> 
        </tr>
    </thead>
    <tbody>
    @foreach (LineDetail item in ViewBag.Lines) 
    {
        <tr>        
            <td>
                @Html.DisplayFor(modelItem => item.Product.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Description)
            </td>
           <td>
                @Html.DisplayFor(modelItem => item.UnitCost)
            </td>       
            <td>
                @Html.DisplayFor(modelItem => item.Quantities)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LineTotal)
            </td>
@*             <td>
                @(((DateTime)item.CreateDate).ToString("dd/MM/yyyy"))
            </td>*@
            <td>
@*                <a asp-controller="LineDetails" asp-action="Edit" asp-route-id="@item.OrderDatailId"><i class="fas fa-solid fa-pen-square"></i></a> |
                <a asp-controller="LineDetails" asp-action="Details" asp-route-id="@item.OrderDatailId"><i class="fas fa-solid fa-folder"></i></a> |
                <a asp-controller="LineDetails" asp-action="Delete" asp-route-id="@item.OrderDatailId"><i class="fas fa-solid fa-trash"></i></a>
*@            </td>
        </tr>
}
    </tbody>
</table>