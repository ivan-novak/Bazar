@using RozetkaWebApp.App_GlobalResources;
@model RozetkaWebApp.Models.Characteristic

@{
    ViewBag.Product = Model.Product;
}

@{
    ViewBag.CharacteristicsTab = (("active"));
    Html.RenderPartial((("_ProductNavigator")));
}

 <p>
     <h4> @Resources.Изменить_характеристику </h4>
 </p>

 <div class="row">

     <div class="col-md-12">
         <form asp-action="Edit">

             <div class="form-group">
                <input type="submit" value="@Resources.Сохранить" class="btn btn-success" />
                <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">@Resources.Отменить</button> 
                   <hr />
             </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CharacteristicId" />
            <div class="form-group" style="display: none">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyId" class="control-label">@Resources.Заголовок0</label>
                <select asp-for="PropertyId" class="form-control" asp-items="ViewBag.PropertyId"></select>
                <span asp-validation-for="PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label">@Resources.Значание</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dimension" class="control-label">@Resources.Ед_измерения</label>
                <input asp-for="Dimension" class="form-control" />
                <span asp-validation-for="Dimension" class="text-danger"></span>
            </div>

         </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync((("_ValidationScriptsPartial")));}
}
