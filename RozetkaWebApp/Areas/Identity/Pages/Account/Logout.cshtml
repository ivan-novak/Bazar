@page
@using RozetkaWebApp.App_GlobalResources;
@model LogoutModel
@{
    ViewBag.Title= Resources.Выход;
}

<header>
    <h1>@ViewBag.Title</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">@Resources.Click_here_to_Logout</button>
            </form>
        }
        else
        {
            <p>@Resources.Вы_успешно_вышли_из_приложения</p>
        }
    }
</header>