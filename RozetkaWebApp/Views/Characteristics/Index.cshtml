@model IEnumerable<RozetkaWebApp.Models.Characteristic>

   @if (ViewBag.Product == null) 
    {
        ViewData["Title"] = "Характеристики товары";
        <h1>@ViewData["Title"]</h1>
    }
    else 
    {
        ViewData["Title"] ="Товар: "+ViewBag.Product.Label;
        <h1> <a asp-controller = "Products" asp-action="Index" asp-route-id="@ViewBag.Product.ProductId"> @ViewData["Title"] </a> </h1>
        <p>  <a asp-action="Create" asp-route-id="@ViewBag.Product.ProductId"> Создать новую характеристику </a> </p>
    }

<table class="table">
    <thead>
        <tr>
             <th>
                Характеристики
            </th>
            <th>
                Значение
            </th>
                <th>
                  Ед. измерения
            </th> 
            <th>
                Действия
            </th>  
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    <a asp-controler="Properties" asp-action="Edit" asp-route-id="1">@Html.DisplayFor(modelItem => item.Property.Label)</a>
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.Value)
                </td>
                 <td>    
                     @Html.DisplayFor(modelItem => item.Dimension)
                </td>         
            <td>
                <a asp-action="Edit" asp-route-id="@item.CharacteristicId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CharacteristicId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CharacteristicId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
