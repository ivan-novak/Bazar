@model IEnumerable<RozetkaWebApp.Models.Characteristic>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TextValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DigitValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TextValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DigitValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Property.PropertyId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CharacteristicId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CharacteristicId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CharacteristicId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
