@using RozetkaWebApp.App_GlobalResources;
@model RozetkaWebApp.Models.Portal

@{
    ViewBag.Title=(("Портал - "))+@Model.Label;
}
@{
    ViewBag.Portal = Model;
    ViewBag.DetailsTab = (("active"));
    Html.RenderPartial((("_PortalNavigator")));
}
     <p></p>
        <h4> @Resources.Информация_о_портале</h4>
     <p></p>

<div>

     <div class="form-group">
          <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.PortalId"> @Resources.Изменить </a>
          <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.PortalId"> @Resources._Remove </a>     
           <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">@Resources.Отменить</button>  
            <hr />
      </div>   

    <dl class="row">
        <dt class = "col-sm-2">
            @Resources.Заголовок0
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Этикетка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Атрибуты
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Attributes)
        </dd>
    </dl>
</div>

