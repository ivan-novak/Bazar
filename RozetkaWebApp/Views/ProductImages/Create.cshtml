@model RozetkaWebApp.Models.ProductImage

@if (ViewBag.Product == null) 
{
        ViewData["Title"] = "Редактировать изображение";
        <h1>@ViewData["Title"]</h1>
}
else 
{
        ViewData["Title"] = "Товар - " +ViewBag.Product.Label;

        <p> 
            <a asp-controller = "Portals" asp-action="Index"> Администрирование </a> \
            <a asp-controller = "Catalogs" asp-action="Index" asp-route-id="@ViewBag.Product.Catalog.PortalId"> @ViewBag.Product.Catalog.Portal.Label </a> \
            <a asp-controller = "Products" asp-action="Index" asp-route-id="@ViewBag.Product.CatalogId"> @ViewBag.Product.Catalog.Label </a> \
            <a> @ViewBag.Product.Label </a> 
         </p>

        <h1>  @ViewData["Title"] </h1>
  
        <ul class="nav nav-tabs">
            <li class="nav-item">  <a class="nav-link" href="/Characteristics/Index/@ViewBag.Product.ProductId">Характеристики</a> </li>
            <li class="nav-item">  <a class="nav-link active" href="/ProductImages/Index/@ViewBag.Product.ProductId">Изображения</a> </li>
            <li class="nav-item">  <a class="nav-link" href="/Products/Details/@ViewBag.Product.ProductId">Детали</a> </li>
        </ul>  
}

  <p>
     <h4> Новое изображение </h4>
 </p>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-success" />
                <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">Отменить</button>
                   <hr />
              </div> 

            <div asp-validation-summary="ModelOnly"  class="text-danger"></div>
            <div class="form-group" style="display: none">
                <label asp-for="ProductId" class="control-label"></label>
               @* <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>*@
                  <input asp-for="ProductId" class="form-control" value=@ViewBag.Product.ProductId /> 
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Label" class="control-label"></label>
                <input asp-for="Label" class="form-control" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none">
                <label asp-for="ImageId" class="control-label"></label>
                <select asp-for="ImageId" class ="form-control" asp-items="ViewBag.ImageId"></select>
            </div>

            <div class="form-group">
                 <div class="editor-label">Файл изображения</div>
                 <div class="editor-field">
                      <input type="file" name="uploadImage" accept="image/*" />
                </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
