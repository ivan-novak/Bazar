@using RozetkaWebApp.App_GlobalResources;
@model IEnumerable<RozetkaWebApp.Models.Portal>

@{
    ViewBag.Title = Resources.Index;
}

<div class="bg-image text-center text-white"
     style="background-image: url('@Url.Content("~/Images/root/background")');
      background-size: cover;
      height: 80vh
      ">

    <div class="d-flex justify-content-center align-items-center h-100 vertical-align: middle ">
        <div style="width: 90%" class="text-left">
            <h1 class="display-2 font-weight-bold font-weight-bolder">   @Resources.BAZAR </h1>
            <p class="display-9 fw-bold fw-bolder"> @Resources.Управління_інтернет_крамницею  </p>
            <br />
            <h1>
                <a type="button" class="btn btn-primary border border-white"
                   asp-area="" asp-controller="Portals" asp-action="Index">@Resources.Управління_веб_контентом</a>
                <a type="button" class="btn btn-outline-primary border border-white text-white"
                   target="acumatica" href="http://vpn.veradata.com:8888/bazar">@Resources.Робота_з_ERP_системою</a>

            </h1>

        </div>
    </div>
</div>


