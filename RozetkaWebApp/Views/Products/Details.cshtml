@using RozetkaWebApp.App_GlobalResources;
@model RozetkaWebApp.Models.Product

@{
    ViewBag.Product = Model;
}
@{
    ViewBag.DetailsTab = (("active"));
    Html.RenderPartial((("_ProductNavigator")));
}


 <p>
        <h4> @Resources.Информация_о_товаре</h4>
 </p>

<div>

     <div class="form-group">
          <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ProductId"> Изменить </a>
          <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.ProductId"> Удалить </a>     
          <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">@Resources.Отменить</button>   
          <hr />
      </div>
    
    <dl class="row">
        <dt class = "col-sm-2">   @Resources.Заголовок     </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Title)         </dd>
        <dt class = "col-sm-2">   @Resources.Этикетка      </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Label)         </dd>
        <dt class = "col-sm-2">   @Resources.Описание      </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Description)   </dd>
        <dt class = "col-sm-2">   @Resources.Атрибуты      </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Attributes)    </dd>
        <dt class = "col-sm-2">   @Resources.Цена          </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Price)         </dd>
        <dt class = "col-sm-2">   @Resources.Количество    </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Quantity)      </dd>
        <dt class = "col-sm-2">   @Resources.Каталог0       </dt>    <dd class = "col-sm-10"> 
           <a asp-controller = "Products" asp-action="Index" asp-route-id="@Model.CatalogId"> @Html.DisplayFor(model => model.Catalog.Label) </a> </dd>
     </dl>
</div>

