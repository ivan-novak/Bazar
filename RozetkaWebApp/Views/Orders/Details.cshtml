@model RozetkaWebApp.Models.Order

@{
    ViewBag.AddressesTab = "active";
    Html.RenderPartial("_ProfileNavigator");
}

 <p>
   <h4> Информация о адресе</h4>
 <p>
      <div class="form-group">
          <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.OrderId"> Изменить </a>
          <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.OrderId"> Удалить </a>     
           <button type="button" class="btn btn-primary"  onclick= "history.go(-1)">Отменить</button>  
            <hr />
      </div>  
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Стоимость заказа
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>

