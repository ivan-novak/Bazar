@page
@using RozetkaWebApp.App_GlobalResources;
@model ForgotPasswordModel
@{
    ViewBag.Title= Resources.Забыли_пароль;
}

<h1>@ViewBag.Title</h1>
<h4>@Resources.Enter_your_email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">@Resources.Адреса_електроної_пошти</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@Resources.Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
