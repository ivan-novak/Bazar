@model IEnumerable<RozetkaWebApp.Models.Product>

@{
    ViewBag.ProductsTab = "active";
    Html.RenderPartial("_CatologNavigator");
}
    
     <p><h4> Список товаров </h4></p>
     <p>
        <div class="row">      
            <div class="col-sm-2">
                 <a  class="btn btn-success" asp-action="Create" asp-route-id="@ViewBag.Catalog.CatalogId"> Добавить новый </a> 
            </div>
            <div class="col-sm-10 ">
                <form asp-action="Index" method="get" enctype="multipart/form-data">
                    <input type="submit" value="Поиск" class="btn btn-info float-right" />
                    <input name="Filter" class="form-control float-right" style="width:300px" value = "@ViewBag.Filter" />       
                </form>
            </div>
        </div>  
    </p>
  
            


<table class="table">
    <thead>
        <tr>
            <th> ID </th>
            <th> Наименование товара </th>
            <th> Цена  </th>
            <th> Количество </th>
            <th> Ресурсы  </th>
            <th class="text-right"> Действия  </th>
         </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>  @Html.DisplayFor(modelItem => item.ProductId)  </td>
            <td>  <a asp-controller="Characteristics" asp-action="Index" asp-route-id="@item.ProductId">@Html.DisplayFor(modelItem => item.Label)</a> </td>
            <td>  @Html.DisplayFor(modelItem => item.Price)   </td>
            <td>  @Html.DisplayFor(modelItem => item.Quantity)  </td>
            <td>  <a asp-controller = "ProductImages" asp-action="Index" asp-route-id="@item.CatalogId">Изображения</a> </td>
            <td class="text-right">
                <a asp-controller="Characteristics" asp-action="Index" asp-route-id="@item.ProductId">   <i class="fas fa-solid fa-folder"></i> </a> |
                <a asp-action="Edit" asp-route-id="@item.ProductId"> <i class="fas fa-solid fa-pen-square"></i> </a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId"> <i class="fas fa-solid fa-trash"></i> </a>
                <i class="fa-solid fa-file-lines  text-dark"></i>
            </td>
        </tr>}
    </tbody>
</table>
