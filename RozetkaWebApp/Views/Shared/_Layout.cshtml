@using RozetkaWebApp.App_GlobalResources;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title- RozetkaWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="navbar-header" style="width:120px">
                        <a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index"> @Resources.BAZAR_nbsp</a>
                    </div>
                    <ul class="navbar-nav flex-grow-1 nav navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" target="shop" asp-area="" asp-controller="Home" asp-action="Portals">@Resources.Магазин</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Portals/Details/1" >@Resources.Администрирование</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" target="acumatica" href="http://vpn.veradata.com:8888/bazar">@Resources.ERP_система</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" target="api" asp-area="" asp-controller="Api" asp-action="Index">@Resources.REST_API</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" target="azure" href="https://portal.azure.com/#home">@Resources.CLOUD_сервіси</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-right">
        <div class="container ">
            <a asp-area="" asp-controller="Home" asp-action="Privacy">@Resources.Privacy</a>
            @Resources._copy_2022_RozetkaWebApp
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
