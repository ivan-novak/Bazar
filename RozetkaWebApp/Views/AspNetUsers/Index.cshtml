@model IEnumerable<RozetkaWebApp.Models.AspNetUser>

 @{
    ViewBag.UsersTab = "active";
    Html.RenderPartial("_RootNavigator");
}
  
<p><h4>Список пользователей</h4></p>
       
 <p><a  class="btn btn-success" asp-action="Create" > Добавить новый </a>   </p>



<table class="table">
       <thead>
        <tr>
            <th> Имя пользователя </th>
            <th> Адрес электронной почты </th>
            <th> Телефон </th>
            <th> Блокировка </th>
            <th class="text-right"> Действия</th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.UserName == User.Identity.Name) 
                {
                   <a href="/Identity/Account/Manage"> 
                       @Html.DisplayFor(modelItem => item.UserName)
                   </a>
                }
                else
                {
                   <a href="/Addresses/Index/@item.Id">                
                      @Html.DisplayFor(modelItem => item.UserName)
                   </a> 
                }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>     
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LockoutEnabled)
            <td class="text-right">
                <a href="/Identity/Account/Manage"><i class="fas fa-solid fa-pen-square"></i> </a> <i>|</i>
                <a href="/Addresses/Index/@item.Id" ><i class="fas fa-solid fa-folder"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
