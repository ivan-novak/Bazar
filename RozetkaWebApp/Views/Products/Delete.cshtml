@model RozetkaWebApp.Models.Product


@{
    ViewBag.Product = Model;
}

@if (ViewBag.Product == null) 
    {
        ViewData["Title"] = "Редактировать продкт";
    <h1>@ViewData["Title"]</h1>
}
else 
{
    ViewData["Title"] = "Товар - " +ViewBag.Product.Label;
    <p> 
            <a asp-controller = "Portals" asp-action="Index"> Администрирование </a> \
            <a asp-controller = "Catalogs" asp-action="Index" asp-route-id="@ViewBag.Product.Catalog.PortalId"> @ViewBag.Product.Catalog.Portal.Label </a> \
                <a asp-controller = "Products" asp-action="Index" asp-route-id="@ViewBag.Product.CatalogId"> @ViewBag.Product.Catalog.Label </a> 
         </p>

        <h1>  @ViewData["Title"] </h1>
  

        <ul class="nav nav-tabs">
            <li class="nav-item">  <a class="nav-link" href="/Characteristics/Index/@ViewBag.Product.ProductId">Характеристики</a> </li>
            <li class="nav-item">  <a class="nav-link" href="/ProductImages/Index/@ViewBag.Product.ProductId">Изображения</a> </li>
            <li class="nav-item">  <a class="nav-link" href="/Products/Details/@ViewBag.Product.ProductId">Детали</a> </li>
            <li class="nav-item">  <a class="nav-link" href="/Products/Edit/@ViewBag.Product.ProductId">Редактировать</a> </li>
            <li class="nav-item">  <a class="nav-link active" href="/Products/Delete/@ViewBag.Product.ProductId">Удалить</a> </li>
        </ul>  

    }

<h3>Вы уверены что хотите удалить это?</h3>
<div>
   <p></p>
    <dl class="row">
        <dt class = "col-sm-2">   Заголовок     </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Title)         </dd>
        <dt class = "col-sm-2">   Этикетка      </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Label)         </dd>
        <dt class = "col-sm-2">   Описание      </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Description)   </dd>
        <dt class = "col-sm-2">   Атрибуты      </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Attributes)    </dd>
        <dt class = "col-sm-2">   Цена          </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Price)         </dd>
        <dt class = "col-sm-2">   Количество    </dt>    <dd class = "col-sm-10">  @Html.DisplayFor(model => model.Quantity)      </dd>
        <dt class = "col-sm-2">   Каталог       </dt>    <dd class = "col-sm-10"> 
           <a asp-controller = "Products" asp-action="Index" asp-route-id="@Model.CatalogId"> @Html.DisplayFor(model => model.Catalog.Label) </a> </dd>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Удалить" class="btn btn-danger" />        
    </form> 
    </dt>   
    </dl>

 </div>
