<div class="row m-0 p-0">
    <div class="col-sm-3 m-0 p-0">
        @{
            <div class="card mr-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">Відділи крамниці</h5>
                    @foreach (var item in Model)
                    {
                        <div class="card-subtitle mb-2 text-muted">
                            <a asp-controller="Portals" asp-action="Details" asp-route-id="@item.PortalId">@Html.DisplayFor(modelItem => item.Label)</a>
                        </div>
                    }

                </div>
            </div>
            <div class="card mr-3  mb-3">
                <div class="card-body">
                    <h5>
                        Особистий кабінет
                    </h5>

                    <div>
                        <a asp-controller="AspNetUsers" asp-action="Cart" asp-route-id="@ViewBag.User.Id">Кошик</a>
                    </div>
                    <div>
                        <a asp-controller="Orders" asp-action="Index" asp-route-id="@ViewBag.User.Id">Мої замовлення</a>
                    </div>
                    <div>
                        <a asp-controller="Comments" asp-action="MyComment" asp-route-id="@ViewBag.User.Id">Мої відгуки</a>
                    </div>
